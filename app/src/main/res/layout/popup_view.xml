<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/open_list_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:id="@+id/pop_mode_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/pop_play_mode_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/play_mode_loop_normal"/>
                <TextView
                    android:id="@+id/pop_play_mode_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="顺序播放"
                    android:textSize="18sp"
                    android:layout_marginLeft="6dp"
                    android:gravity="center"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/pop_order_content"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/pop_order_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:src="@mipmap/sort_descending_normal"/>
                <TextView
                    android:id="@+id/pop_order_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="升序"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>
        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pop_list"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>
        <TextView
            android:id="@+id/pop_close"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="关闭"
            android:textSize="18sp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>