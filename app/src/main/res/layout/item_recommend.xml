<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/item_album"
    android:layout_height="75dp">
    <ImageView
        android:id="@+id/album_icon"
        android:layout_width="68dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/album_icon"
        android:orientation="vertical"
        android:layout_marginLeft="10.5dp">
        <TextView
            android:id="@+id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="拿破仑·希尔《成功学全书》"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/album_content"
            android:layout_marginTop="2.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/second"
            android:singleLine="true"
            android:text="为你开启成功之路，给你指向未来！一起行动"
            android:ellipsize="end"
            android:textSize="12sp"/>
        <LinearLayout
            android:layout_marginTop="10.5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2.5dp"
                android:layout_width="4dp"
                android:layout_height="5.25dp"
                android:src="@mipmap/play_info_icon"/>
            <TextView
                android:id="@+id/play_count"
                android:layout_width="44.5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/second"
                android:text="234.5万"
                android:textSize="7sp"/>
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_marginRight="2.5dp"
                android:layout_width="4dp"
                android:layout_height="5.25dp"
                android:src="@mipmap/ic_sound"/>
            <TextView
                android:id="@+id/play_ji"
                android:layout_width="44.5dp"
                android:layout_height="wrap_content"
                android:textColor="@color/second"
                android:text="23集"
                android:textSize="7sp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>